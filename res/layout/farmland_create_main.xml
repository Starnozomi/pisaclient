<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:focusableInTouchMode="true"
       android:background="#f6f6f6"
    android:orientation="vertical" >
     <LinearLayout 
         	android:id="@+id/ll_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f6f6f6"
            android:padding="5dp"
            >
          <FrameLayout
                 android:layout_width="40dp"
                 android:layout_height="fill_parent"
                >
                <ImageView 
                android:id="@+id/iv_crop_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/crop_no_select"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center"
                />
           </FrameLayout>
         
            <LinearLayout 
                 android:id="@+id/ll_area"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical"
                >
                <TextView 
                     android:id="@+id/tv_area_name" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="农田位置（自动定位）"
                    android:textColor="#0e0e0e"
                    android:textSize="@dimen/font_size_big"
                    />
                <TextView
                    android:id="@+id/tv_area_content" 
                   	 android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择地区"
                    android:textColor="#858688"
                    android:textSize="@dimen/font_size_default"
                    />
            </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                />
            
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/division_line"
            />
        
         <LinearLayout 
         	android:id="@+id/ll_0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#f6f6f6"
            >
          <FrameLayout
                 android:layout_width="40dp"
                 android:layout_height="fill_parent"
                >
                <ImageView 
                android:id="@+id/iv_crop_cityset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/crop_no_select"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center"
                />
           </FrameLayout>
         
            <LinearLayout 
                 android:id="@+id/ll_cityset"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical" >
                <TextView 
                     android:id="@+id/tv_cityset_name" 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择所在地区"
                    android:textColor="#0e0e0e"
                    android:textSize="@dimen/font_size_big"
                    />
                <TextView
                    android:id="@+id/tv_cityset_content" 
                   	android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择所在地区"
                    android:textColor="#858688"
                    android:textSize="@dimen/font_size_default" />
            </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp" />
            
        </LinearLayout>
        
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/division_line"/>
    
        <LinearLayout 
            android:id="@+id/ll_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="#f6f6f6"
            >
               
          <FrameLayout 
                 android:layout_width="40dp"
                 android:layout_height="fill_parent"
                >
                <ImageView 
                android:id="@+id/iv_crop_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/crop_no_select"
                android:contentDescription="@string/no_desc"
                 android:layout_gravity="center_vertical|center_horizontal"
                
                />
           </FrameLayout>
            <LinearLayout 
                 android:id="@+id/ll_type"
                 android:layout_width="0dp"
                 android:layout_height="50dp"
                 android:layout_weight="1"
                 android:orientation="vertical"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="种养类型"
                    android:textColor="#0e0e0e"
                    android:textSize="@dimen/font_size_big"
                    />
                <TextView
                    android:id="@+id/tv_crop_type" 
                   	 android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择种养类型"
                    android:textColor="#858688"
                    android:textSize="@dimen/font_size_default"
                    />
            </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical"
                 android:layout_marginRight="5dp"
                />
        </LinearLayout>
         <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/division_line"
            />
        
         <LinearLayout 
             android:id="@+id/ll_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
             android:padding="5dp"
              android:background="#f6f6f6"
            >
             <FrameLayout 
                 android:layout_width="40dp"
                 android:layout_height="fill_parent"
                >
                <ImageView 
                android:id="@+id/iv_crop_breed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/crop_no_select"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical|center_horizontal"
                />
           </FrameLayout>
            <LinearLayout 
                 android:id="@+id/ll_breed"
                 android:layout_width="0dp"
                 android:layout_height="50dp"
                 android:layout_weight="1"
                 android:orientation="vertical"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="种养品种"
                    android:textColor="#0e0e0e"
                    android:textSize="@dimen/font_size_big"
                    />
                <TextView
                    android:id="@+id/tv_crop_breed" 
                   	 android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选中种养品种"
                   android:textColor="#858688"
                    android:textSize="@dimen/font_size_default"
                    />
            </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical"
                 android:layout_marginRight="5dp"
                />
        </LinearLayout>
         <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/division_line"
            />

         <LinearLayout 
            android:id="@+id/ll_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
			android:padding="5dp"
            android:background="#f6f6f6"
            >
             <FrameLayout 
                 android:layout_width="40dp"
                 android:layout_height="fill_parent"
                >
                <ImageView 
                android:id="@+id/iv_crop_grow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/crop_no_select"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical|center_horizontal"
                />
           </FrameLayout>
          <LinearLayout 
                 android:id="@+id/ll_grow"
                 android:layout_width="0dp"
                 android:layout_height="50dp"
                 android:layout_weight="1"
                 android:orientation="vertical"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属基地"
                    android:textColor="#0e0e0e"
                    android:textSize="@dimen/font_size_big"
                    />
                <TextView
                    android:id="@+id/tv_crop_grow" 
                   	 android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择所属基地（可选）"
                    android:textColor="#858688"
                    android:textSize="@dimen/font_size_default"
                    />
            </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right"
                android:contentDescription="@string/no_desc"
                android:layout_gravity="center_vertical"
                 android:layout_marginRight="5dp"
                />
        </LinearLayout>

          <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/division_line"
            />
        
    		
          <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
	       android:background="#f6f6f6"
        	 >
            	<EditText
			        android:id="@+id/et_crop_content"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:padding="5dp"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:inputType="textMultiLine"
			        android:gravity="top"
			        android:maxLines="2"
			        android:singleLine="true"
			        android:scrollHorizontally="false"
			        android:hint="请输入农田名称"
			        android:textSize="@dimen/font_size_default"
			        android:textColor="#a7aaaf"
			        android:background="@drawable/crop_edit_selecter"
			         />
              
              
            	  <EditText
			        android:id="@+id/et_farm_area"
			        android:layout_marginTop="10dp"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:padding="5dp"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:gravity="top"
			        android:maxLines="2"
			        android:singleLine="true"
			        android:scrollHorizontally="false"
			        android:hint="请输入农田面积(亩)"
			        android:textSize="@dimen/font_size_default"
			        android:textColor="#a7aaaf"
			        android:background="@drawable/crop_edit_selecter"
			         android:numeric="integer"
			         android:inputType="number"
			         />
              
		        
         
         
		     <LinearLayout 
		           android:layout_width="fill_parent"
		           android:layout_height="wrap_content"
		           android:orientation="horizontal"
		           android:layout_marginTop="10dp"
			        android:layout_marginLeft="20dp"
			        android:layout_marginRight="20dp"
			        android:layout_marginBottom="10dp"
			        android:visibility="gone"
		         >
					        <ImageView 
					        android:id="@+id/iv_upload_1"
					        android:layout_height="wrap_content"
					        android:layout_width="wrap_content"
					        android:scaleType="centerCrop"
					         android:layout_marginLeft="10dp"
					        android:background="@drawable/adv_imge"
					        android:contentDescription="@string/no_desc"
				         />
				         <ImageView 
					        android:id="@+id/iv_upload_2"
					         android:layout_height="wrap_content"
					        android:layout_width="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:scaleType="centerCrop"
					        android:visibility="invisible"
					        android:background="@drawable/adv_imge"
					        android:contentDescription="@string/no_desc"
				        />
				         <ImageView 
					        android:id="@+id/iv_upload_3"
					        android:scaleType="centerCrop"
					         android:layout_height="wrap_content"
					        android:layout_width="wrap_content"
					        android:visibility="invisible"
					        android:layout_marginLeft="10dp"
					        android:background="@drawable/adv_imge"
					        android:contentDescription="@string/no_desc"
				       		 />
		   		 </LinearLayout>
   		  </LinearLayout>
   		  
           <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/division_line"
            />
   		 
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1" />
          
        <!-- <Button
		       android:id="@+id/bn_crop_upload"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"
		       android:layout_marginBottom="10dp"
		       android:layout_marginLeft="5dp"
		       android:layout_marginRight="5dp"
		       android:background="@drawable/btn_common_edit_style"
		       android:text="上报农情"
		       android:textColor="@color/white"
		       android:textSize="@dimen/font_size_big" />  -->
		       
		 <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
	       android:background="#f6f6f6">
           
          <Button 
           android:id="@+id/bn_crop_upload"
           android:layout_marginTop="20dp"
           android:layout_height="33dp"
           android:layout_width="230dp"
           android:layout_gravity="center_horizontal"
           android:background="@drawable/crop_upload_selector"
           android:text="新增农田"
           android:textColor="@color/white"
           android:textSize="@dimen/font_size_default"
           android:gravity="center"
           />
    
       <Button 
           android:id="@+id/bn_crop_cancel"
           android:layout_height="33dp"
           android:layout_width="230dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/crop_cancel_selector"
           android:layout_gravity="center_horizontal"
           android:layout_marginBottom="20dp"
            android:text="取消"
           android:textColor="#848688"
           android:textSize="@dimen/font_size_default"
           android:gravity="center"
            />
     </LinearLayout>

</LinearLayout>
