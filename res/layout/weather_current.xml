<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/weather_current_back"
     android:visibility="gone"
     >
    <FrameLayout 
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
       
        >
        <ImageView
        android:id="@+id/wt_pull_up_flag"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pull_up"
        android:contentDescription="@string/no_desc"
        />
          <ImageView
        android:id="@+id/wt_pull_down_flag"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pull_down"
        android:contentDescription="@string/no_desc"
        android:visibility="gone"
        />
    </FrameLayout>
     
     <LinearLayout
         android:layout_width="match_parent"
    	 android:layout_height="wrap_content"
    	 android:orientation="vertical"
    	 android:visibility="gone"
         >
            <RelativeLayout 
                android:id="@+id/wt_main"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
               	android:paddingRight="20dp"
               	android:paddingTop="12dp"
                >
                <TextView
                    android:id="@+id/tv_wt_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:textSize="60sp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/weather_font_color"
                    android:includeFontPadding="false"
                    android:padding="0dp"
                     />
                 <TextView 
                    android:id="@+id/tv_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/tv_wt_now"
                    android:text="℃"
                    android:textSize="24sp"
                    android:textColor="@color/weather_font_color"
                    />
                 <TextView 
                    android:id="@+id/tv_wt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/tv_by"
                    android:paddingLeft="5dp"
                    android:textSize="24sp"
                    android:textColor="@color/weather_font_color"
                    />
                 
                 <LinearLayout 
                     android:id="@+id/ll_Warning"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:orientation="horizontal"
                     android:background="@drawable/warning_back"
                     android:padding="5dp"
                      android:clickable="true"
                      android:visibility="gone"
                     >
                    <ImageView 
	                    android:id="@+id/iv_Warning"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:background="@drawable/warning_icom"
	                    android:layout_gravity="center_vertical"
	                    android:contentDescription="@string/no_desc"
	                    android:clickable="false"
	                    />
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最新预警"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:textColor="@color/weather_font_color"
                         android:clickable="false"
           
                        />
                 </LinearLayout>
		          
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                >
                  <TextView
                    android:id="@+id/tv_wt_Humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_data"
                    android:layout_alignParentLeft="true"
                    android:textSize="18sp"
                     android:textColor="@color/weather_font_color"
                     />
                <TextView
                    android:id="@+id/tv_wt_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_wt_Humidity"
                    android:layout_marginLeft="10dp"
                    android:text="@string/no_data"
                   android:textSize="18sp"
                    android:textColor="@color/weather_font_color"
                     />
                 
            </RelativeLayout>
             <RelativeLayout 
                android:id="@+id/wt_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                >
                  <TextView
                    android:id="@+id/tv_wt_daytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/no_data"
                    android:textSize="14sp"
                    android:textColor="@color/weather_font_color"
		            />
                  
                   <TextView
                    android:id="@+id/tv_wt_ob_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_wt_daytime"
                    android:paddingLeft="10dp"
                    android:text="@string/no_data"
                    android:textSize="14sp"
                    android:textColor="@color/weather_font_color"
		            />
                
            </RelativeLayout>
         
     </LinearLayout>
    

</FrameLayout>
