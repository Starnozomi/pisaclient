<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  <LinearLayout 
    android:id="@+id/farm_window"  
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/farm_attribute_border"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_one_name"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/et_farm_name"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="@color/black" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="隶属基地"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/btn_workstation_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="#000" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/farm_region"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/btn_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="#000" />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cropstype"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/btn_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="暂无数据"
            android:textSize="16sp"
            android:layout_weight="4"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cropsvariety"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/btn_variety"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/farm_lng"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/et_lng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/farm_lat"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/et_lat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="海拔"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/et_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:textSize="16sp"
            android:text="暂无数据"
            android:textColor="@color/black" />
    </LinearLayout>

    

    
    
    
    
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" 
        android:visibility="gone"
        >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/agrperiod"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" 
        />

        <Button
            android:id="@+id/btn_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" 
       />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="面积(亩)"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <TextView
            android:id="@+id/et_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:enabled="false"
            android:text="暂无数据"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>

</LinearLayout>
