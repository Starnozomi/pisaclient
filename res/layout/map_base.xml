<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_menu"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:background="@drawable/head_bar" >

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back_2"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:visibility="gone" />
        
        <ImageView 
            android:id="@+id/iv_back_div_ic"
            android:layout_toRightOf="@id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/div_lin_v"
            android:contentDescription="@string/no_desc"
            />

        <ImageButton
            android:id="@+id/ibtn_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_title"
            android:background="@drawable/home_add"
            android:contentDescription="@string/no_desc"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="5dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="24sp" 
            android:background="@drawable/menu_button_selector"
            />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ibtn_refresh"
            android:text="@string/title"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_new"
            android:text="@string/hot_advisory"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_my"
            android:text="@string/new_advisory"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/my_advisory"
            android:textColor="@color/white"
            android:background="@drawable/menu_button_selector"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_edit"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ibtn_refresh"
            android:src="@drawable/edit"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:visibility="gone"
             />

        <ImageButton
            android:id="@+id/ibtn_refresh"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/base_refresh_bg_selector"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_save"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/save"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_suggest"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ibtn_menu"
            android:src="@drawable/add_suggest"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_menu"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/menu"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_menu_left"
            android:layout_width="52dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/menu_button_selector"
            android:contentDescription="@string/no_desc"
            android:src="@drawable/menu_left"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:id="@+id/div_line_top"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/division_line" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </RelativeLayout>

    <View
        android:id="@+id/div_line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/division_line" />



</LinearLayout>