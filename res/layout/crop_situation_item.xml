<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="50dp"
        android:layout_height="50dp"
        >
        <ImageView 
        android:id="@+id/iv_user_head_icon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:contentDescription="@string/no_desc"
        />
        
    </LinearLayout>
   
        <RelativeLayout 
             android:paddingLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
	            <TextView 
	            android:id="@+id/tv_crop_user_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:text="--/--"
	            android:textColor="@color/font_user_name"
	            android:textSize="@dimen/font_size_big"
	            />
		        <TextView 
		            android:layout_marginTop="12dp"
		            android:id="@+id/tv_crop_user_comment"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="--/--"
		            android:textColor="@color/font_default"
		            android:textSize="@dimen/font_size_default"
		            android:layout_alignParentLeft="true"
		            android:layout_below="@id/tv_crop_user_name"
		            />
		        <com.supermap.pisaclient.common.views.CropInGridview
		            android:layout_marginTop="8dp"
		            android:id="@+id/gv_crop_images"
		            android:listSelector="@android:color/transparent"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:cacheColorHint="@android:color/transparent"
			        android:verticalSpacing="2dp"
			        android:horizontalSpacing="2dp"
			        android:stretchMode="columnWidth"  
			  	    android:gravity="center" 
			        android:numColumns="3" 
			        android:layout_alignParentLeft="true"
		            android:layout_below="@id/tv_crop_user_comment"
		            />
		        <RelativeLayout
		              android:layout_marginTop="8dp"
		            android:id="@+id/rl_crop_type"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent" 
		            android:layout_alignParentLeft="true"
		            android:layout_below="@id/gv_crop_images"
		            >
		            <TextView 
		                android:id="@+id/tv_crop_type"
		                android:layout_alignParentLeft="true"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
			            android:textColor="@color/font_default"
			            android:textSize="@dimen/font_size_small"
		                />
		            <TextView 
		                android:layout_toRightOf="@id/tv_crop_type"
		                android:id="@+id/tv_crop_breed"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
			            android:textColor="@color/font_default"
			            android:textSize="@dimen/font_size_small"
		                />
		             <TextView 
		                android:layout_toRightOf="@id/tv_crop_breed"
		                android:id="@+id/tv_crop_grow"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
			            android:textColor="@color/font_default"
			            android:textSize="@dimen/font_size_small"
		                />
		           </RelativeLayout>
		        
		        <RelativeLayout
		            android:layout_marginTop="8dp"
		            android:id="@+id/rl_crop_where"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent" 
		            android:layout_alignParentLeft="true"
		            android:layout_below="@id/rl_crop_type"
		            >
		            <TextView 
		                android:id="@+id/tv_crop_time"
		                android:layout_alignParentLeft="true"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:text="--/--"
			            android:textColor="@color/font_default"
			            android:textSize="@dimen/font_size_small"
		                />
		            <TextView 
		                android:layout_toRightOf="@id/tv_crop_time"
		                android:id="@+id/tv_wrop_city"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:text="--/--"
			            android:textColor="@color/font_default"
			            android:textSize="@dimen/font_size_small"
		                />
		           </RelativeLayout>
		            
		         <RelativeLayout
		            android:id="@+id/rl_crop_click_comment"
		            android:layout_height="wrap_content"
		            android:layout_width="fill_parent" 
		            android:layout_alignParentRight="true"
		            android:layout_below="@id/rl_crop_where"
		            >
		            <ImageButton 
		                android:layout_alignParentRight="true"
		                android:id="@+id/ib_wrop_comment"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:background="@drawable/coment_normal"
		                />
			        <TextView
			            android:layout_alignParentRight="true"
			            android:id="@+id/tv_comment_nums"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="60dp"
	
			            android:textColor="@color/black"
			            android:textSize="@dimen/font_size_default"
			            />
			          <ImageView
			            android:id="@+id/iv_comment_nums"
			             android:layout_toLeftOf="@id/tv_comment_nums"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="5dp"
			            android:background="@drawable/comment"
			            android:contentDescription="@string/no_desc" 
			            />
			          
			           <TextView
			            android:layout_toLeftOf="@id/iv_comment_nums"
			            android:id="@+id/tv_heart_nums"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="10dp"
			            android:textColor="@color/black"
			            android:textSize="@dimen/font_size_default"
			            />
			            <ImageView
			            android:id="@+id/iv_heart_nums"
			            android:layout_toLeftOf="@id/tv_heart_nums"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginRight="5dp"
			            android:background="@drawable/heart"
			            android:contentDescription="@string/no_desc" 
			            />
		        </RelativeLayout>
		        <ImageView 
		            android:id="@+id/iv_remind"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:background="@drawable/iv_comment_remind"
		            android:layout_below="@id/rl_crop_click_comment"
		            />
		        <com.supermap.pisaclient.common.views.CropInListview 
		            android:id="@+id/lv_crop_comments"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/crop_comment_back"
		            android:divider="@color/division_line"  
		            android:layout_below="@id/iv_remind"
		            />
		            
		        
        </RelativeLayout>
       

</LinearLayout>
