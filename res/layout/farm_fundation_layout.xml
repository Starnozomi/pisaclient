<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/farm_attribute_border"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_one_name"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <EditText
            android:id="@+id/et_farm_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_lng"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <TextView
            android:id="@+id/et_lng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_lat"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <TextView
            android:id="@+id/et_lat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_height"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <TextView
            android:id="@+id/et_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_region"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <Button
            android:id="@+id/btn_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_region_code"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <Button
            android:id="@+id/btn_region_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_workstation_apply"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <Button
            android:id="@+id/btn_workstation_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/farm_area"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/font_size_default" />

        <TextView
            android:id="@+id/et_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>