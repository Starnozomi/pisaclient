<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pup_Window_Layout"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/one_map_pup_bg"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal" >

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"           
            >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pup_vip_user" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="大户"
                android:textColor="#33a3dc"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_Vip_User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pup_farm" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="农田"
                android:textColor="#33a3dc"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_Farm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pup_situation" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="农情"
                android:textColor="#33a3dc"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_Situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/iv_temp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ico_temp" />

            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="温度"
                android:textColor="#33a3dc"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </LinearLayout>

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal" >

            <ImageView
                android:id="@+id/iv_water"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ico_water" />

            <TextView
                android:id="@+id/tv_water"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="降水"
                android:textColor="#33a3dc"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/tv_sq"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ico_sq" />

            <TextView
                android:id="@+id/tv_sq12"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="墒情"
                android:textColor="#33a3dc"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_sq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7" />

        </LinearLayout>

    </LinearLayout>
    
    
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp" >

        <Button
            android:id="@+id/btn_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/one_map_pup_bg"
            android:text="取消"
            android:textColor="#33a3dc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="3dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/one_map_pup_bg"
            android:text="确定"
            android:textColor="#33a3dc"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
