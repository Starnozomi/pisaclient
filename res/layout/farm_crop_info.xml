<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/farm_attribute_border"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/cropstype"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <Button
            android:id="@+id/btn_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/cropsvariety"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" />

        <Button
            android:id="@+id/btn_variety"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" 
        android:visibility="gone"
        >

        <TextView
            android:layout_width="@dimen/tv_width_default"
            android:layout_height="wrap_content"
            android:text="@string/agrperiod"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_big" 
        />

        <Button
            android:id="@+id/btn_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_style"
            android:textColor="@color/black" 
       />
    </LinearLayout>

</LinearLayout>