<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/crop_lv1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="@drawable/linearlayout_bg"
            android:gravity="center_vertical"
            android:hint="点击选择作物类型"
            android:textSize="14sp" />
         <!-- <TextView
            android:id="@+id/crop_lv2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:background="@drawable/linearlayout_bg"
            android:gravity="center_vertical"
            android:hint="点击选择作物品种"
            android:textSize="14sp" /> -->
            </LinearLayout>
            

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#ccc"
            android:gravity="center_vertical" />
        
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_marginTop="5dp"
        	android:layout_weight="1"
        	android:paddingLeft="10dp"
        	android:paddingRight="10dp" >
            
            <ListView 
                android:id="@+id/crop_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:listSelector="#00000000"
                android:dividerHeight="4dp"
                android:divider="#00000000"
                android:scrollbars="none"/>
            </LinearLayout>
            
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="50dp"
        	android:padding="5dp"
        	android:orientation="horizontal" >

            <Button
            	android:id="@+id/crop_add"
            	android:layout_width="0dp"
            	android:layout_height="40dp"
            	android:layout_weight="1"
            	android:background="@drawable/common_btn_normal"
            	android:text="添加"
            	android:textSize="14sp" />
            <Button
            	android:id="@+id/crop_submit"
            	android:layout_width="0dp"
            	android:layout_height="40dp"
            	android:layout_weight="1"
            	android:layout_marginLeft="5dp"
            	android:background="@drawable/common_btn_normal"
            	android:text="提交"
            	android:textSize="14sp" />
            </LinearLayout>
           

</LinearLayout>
