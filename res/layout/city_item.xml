<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@null" 
    android:layout_width="0.0dip" 
    android:layout_height="fill_parent" 
    android:layout_weight="1.0"
    >
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/item_back"
      android:focusable="false"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_cityname"
        android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="自动定位"
       android:layout_gravity="center_horizontal"
       android:gravity="center_horizontal"
       android:maxLines="1"
       android:textSize="@dimen/font_size_default"
       android:textColor="@color/white"
       android:focusable="false"
       
        />
      <ImageView 
        android:id="@+id/iv_tepr_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/no_weather"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        />
       <TextView 
        android:id="@+id/tv_temp_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="@string/no_data"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_size_default"
        android:textColor="@color/white"
        />
         <TextView 
        android:id="@+id/tv_default"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="设为默认"
        android:background="@drawable/city_default_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="@dimen/font_size_default"
        android:textColor="@color/white"
        />
 </LinearLayout>
 
    <ImageView 
        android:layout_gravity="top|right"
        android:id="@+id/iv_delete_city"
        android:layout_marginRight="0.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_delete_city"
        android:visibility="gone"
        android:focusable="false"
        
        />
    
    
</FrameLayout>
