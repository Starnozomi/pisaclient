<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        >
        <LinearLayout 
            android:id="@+id/ll_crop_upload"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            >
            <TextView 
                android:id="@+id/tv_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/font_size_default"
                android:textColor="@color/white"
                android:background="@drawable/filled_circle"
                />
             <TextView 
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/country_color"
                />
              <TextView 
                android:id="@+id/tv_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/font_size_default"
                android:textColor="@color/white"
                android:background="@drawable/filled_circle"
                />
             <TextView 
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/country_color"
                />
              <TextView 
                android:id="@+id/tv_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/font_size_default"
                android:textColor="@color/white"
                android:background="@drawable/filled_circle"
                />
             <TextView 
                android:layout_width="5dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
               android:background="@color/country_color"
                />
              <TextView 
                android:id="@+id/tv_4"
               android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/font_size_default"
                android:textColor="@color/white"
                android:background="@drawable/filled_circle"
                />
             <TextView 
                android:layout_width="5dp"
                 android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
               android:background="@color/country_color"
                />
              <TextView 
                android:id="@+id/tv_5"
             	 android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="5"
                android:textSize="@dimen/font_size_default"
                android:textColor="@color/white"
                android:background="@drawable/filled_circle"
                />
            
        </LinearLayout>
        <ListView 
            android:id="@+id/lv_crop_situation_upload_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:background="@drawable/crop_uploaddata_back"
            ></ListView>
        
       </LinearLayout>
    <LinearLayout 
           
           android:layout_width="fill_parent"
           android:layout_height="0dp"
           android:layout_weight="1.3"
           android:orientation="horizontal"
        >
        <ImageView 
        android:id="@+id/iv_upload_1"
        android:layout_weight="1"
        android:layout_height="100dip"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:background="@drawable/crop_imge"
        android:contentDescription="@string/no_desc"
        />
         <ImageView 
        android:id="@+id/iv_upload_2"
        android:layout_weight="1"
        android:layout_height="100dip"
        android:layout_width="0dp"
        android:paddingLeft="5dp"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:background="@drawable/crop_imge"
        android:contentDescription="@string/no_desc"
        />
        <ImageView 
        android:id="@+id/iv_upload_3"
        android:scaleType="centerCrop"
        android:layout_weight="1"
        android:layout_height="100dip"
        android:layout_width="0dp"
        android:paddingLeft="5dp"
        android:visibility="invisible"
        android:background="@drawable/crop_imge"
        android:contentDescription="@string/no_desc"
        />
    </LinearLayout>
  
      <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="0dp"
           android:layout_weight="0.7"
           android:paddingTop="5dp"
           android:orientation="horizontal"
           android:layout_gravity="bottom"
           >
           <LinearLayout 
               android:layout_width="0dp" 
	           android:layout_height="wrap_content"
	           android:layout_weight="1.0"
	           android:layout_gravity="bottom"
	           android:gravity="center_horizontal"
	           android:orientation="horizontal"
               >
              <ImageButton 
               android:id="@+id/ib_crop_upload"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:background="@drawable/upload_actecture"
               android:layout_gravity="bottom"
               android:contentDescription="@string/no_desc"
               />
               <Button 
	               android:id="@+id/bn_crop_upload"
	               android:paddingLeft="5dp"
	               android:layout_width="wrap_content" 
	               android:layout_height="wrap_content"
	               android:textColor="@color/font_default"
	               android:textSize="@dimen/font_size_default"
	               android:background="@drawable/crop_upload_selector"
               />
            </LinearLayout>
          
           
       </LinearLayout>
    
</LinearLayout>
